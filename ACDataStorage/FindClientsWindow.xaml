<Window x:Class="ACDataStorage.FindClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACDataStorage"
        mc:Ignorable="d"
        Title="FindClientsWindow" Height="600" Width="800" Icon="Images/accomp.jpg">
    <StackPanel >
        <Label Content="РЕЗУЛЬТАТЫ ПОИСКА" HorizontalAlignment="Center" />
        <ScrollViewer  VerticalScrollBarVisibility="Visible" Height="540">
            <ListBox  Width="750"   x:Name="ListFindClient"  HorizontalAlignment="Center" BorderBrush="AntiqueWhite"  IsEnabled="{Binding IsChecked, ElementName=EnableListBox}"/>
        </ScrollViewer>
    </StackPanel>
</Window>
